+static char *
+xenstore_gets(xs_handle *xsh, int domid, const char *fmt, ...)
+{
+    char *s;
+    va_list ap;
+
+    va_start(ap, fmt);
+    s = xenstore_getsv(xsh, domid, fmt, ap);
+    va_end(ap);
+    return s;
+}
+
+static uint64_t
+xenstore_get(xs_handle *xsh, int domid, const char *fmt, ...)
+{
+    char *s;
+    uint64_t value = 0;
+    va_list ap;
+
+    va_start(ap, fmt);
+    s = xenstore_getsv(xsh, domid, fmt, ap);
+    if (s) {
+        if (!strcasecmp(s, "true"))
+            value = 1;
+        else
+        {
+            errno = 0;
+            value = strtoull(s, NULL, 0);
+            if ( errno )
+                value = 0;
+        }
+        free(s);
+    }
+    va_end(ap);
+    return value;
+}
