+static char *
+xenstore_getsv(xs_handle *xsh, int domid, const char *fmt, va_list ap)
+{
+    char *s = NULL;
+    int n, m;
+    char key[1024] = { 0 };
+
+    n = snprintf(key, sizeof(key), "%s/", xs_domain_path);
+    if (n < 0)
+        goto out;
+    m = vsnprintf(key + n, sizeof(key) - n, fmt, ap);
+    if (m < 0)
+        goto out;
+
+    s = xs_read(xsh, XBT_NULL, key, NULL);
+out:
+    return s;
